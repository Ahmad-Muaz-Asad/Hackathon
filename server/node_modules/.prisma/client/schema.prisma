generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./veritas.db"
}

// 1. IDENTITY LEDGER (The Gatekeeper)
model VerificationLog {
  email      String    @id
  otpCode    String
  isClaimed  Boolean   @default(false)
  verifiedAt DateTime?
}

// 2. ACTIVITY LEDGER (The Anonymous World)
model User {
  id         String   @id @default(uuid())
  reputation Float    @default(45.0)
  joinedAt   DateTime @default(now())
  votes      Vote[]
  rumors     Rumor[]
}

model Rumor {
  id         String   @id @default(uuid())
  content    String
  authorId   String
  trustScore Float    @default(0.0)
  status     String   @default("TRIBUNAL")
  createdAt  DateTime @default(now())
  visibleAt  DateTime
  settlesAt  DateTime
  author     User     @relation(fields: [authorId], references: [id])
  votes      Vote[]
}

model Vote {
  id      String @id @default(uuid())
  userId  String
  rumorId String
  type    Int
  weight  Float
  user    User   @relation(fields: [userId], references: [id])
  rumor   Rumor  @relation(fields: [rumorId], references: [id])

  @@unique([userId, rumorId])
}
